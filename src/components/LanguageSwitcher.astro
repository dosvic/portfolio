---
interface Props {
  currentLang: string;
}

const { currentLang } = Astro.props;
---

<div class="language-switcher">
  <div class="flex items-center gap-2">
    <span class={`lang-label ${currentLang === 'en' ? 'active' : ''}`}>EN</span>
    <button
      id="lang-toggle"
      class="toggle-switch"
      role="switch"
      aria-checked={currentLang === 'de'}
      aria-label="Switch language"
    >
      <span class="toggle-slider" data-lang={currentLang}></span>
    </button>
    <span class={`lang-label ${currentLang === 'de' ? 'active' : ''}`}>DE</span>
  </div>
</div>

<style>
  .language-switcher {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 9999px;
    padding: 8px 16px;
  }

  .lang-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.4);
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .lang-label.active {
    color: rgba(255, 255, 255, 0.9);
  }

  .toggle-switch {
    position: relative;
    width: 48px;
    height: 24px;
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .toggle-switch:hover {
    background-color: rgba(255, 255, 255, 0.15);
  }

  .toggle-slider {
    position: absolute;
    top: 2px;
    left: 2px;
    width: 18px;
    height: 18px;
    background-color: white;
    border-radius: 50%;
    transition: transform 0.3s ease;
  }

  .toggle-slider[data-lang="de"] {
    transform: translateX(24px);
  }
</style>

<script>
  function initLanguageSwitcher() {
    const toggle = document.getElementById('lang-toggle');
    const slider = toggle?.querySelector('.toggle-slider');
    
    if (!toggle || !slider) return;

    toggle.addEventListener('click', () => {
      const currentLang = slider.getAttribute('data-lang');
      const newLang = currentLang === 'en' ? 'de' : 'en';
      
      localStorage.setItem('preferredLang', newLang);
      
      const currentPath = window.location.pathname;
      const pathWithoutLang = currentPath.replace(/^\/(en|de)(\/|$)/, '/');
      const pathPart = pathWithoutLang === '/' ? '/' : pathWithoutLang;
      const newPath = `/${newLang}${pathPart}`;
      
      window.location.pathname = newPath;
    });
  }

  initLanguageSwitcher();

  document.addEventListener('astro:page-load', initLanguageSwitcher);
</script>
