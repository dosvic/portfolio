---
import BaseLayout from '../layouts/BaseLayout.astro';

const socials = [
  {
    label: 'GitHub',
    href: 'https://github.com/dosvic'
  },
  {
    label: 'LinkedIn',
    href: 'https://www.linkedin.com/in/deniz-osmanovic-60a4ba239/'
  }
];

const [github, linkedin] = socials;

const experience = [
  {
    company: 'PaysafeCard',
    period: '2021 — Present',
    summary:
      'Full-stack work across payments, KYC, and digital storefronts to improve reliability and launch new payment options.',
    roles: [
      {
        title: 'Software Engineer',
        period: '2024 — Present'
      },
      {
        title: 'Junior Software Engineer',
        period: '2023 — 2024'
      },
      {
        title: 'Engineering Trainee',
        period: '2021 — 2023'
      },
    ]
  }
];

const projects = [
  {
    name: 'This website',
    description:
      "Astro + Tailwind portfolio deployed on a Hetzner VPS with Ansible-provisioned Nginx and Let's Encrypt.",
    link: 'https://denizosmanovic.com'
  },
];

const certifications = [
  {
    title: 'AWS Certified Solutions Architect – Associate',
    issuer: 'Amazon Web Services Training and Certification',
    description:
      'Earners design secure, resilient, and efficient architectures on AWS aligned to customer requirements.',
    credentialUrl: 'https://www.credly.com/badges/3b288661-d549-4f8b-b903-526503d564aa/linked_in_profile',
  },
];

const skills = [
  'JavaScript',
  'TypeScript',
  'Angular',
  'Astro',
  'Node.js',
  'SQL',
  'Java',
  'Jakarte EE/Java EE',
  'Python',
  'AWS'
];
---
<BaseLayout
  title="Deniz Osmanovic · Software Engineer"
  description="Portfolio and selected work by Deniz Osmanovic, a software engineer focused on product-driven web experiences."
>
  <main class="mx-auto flex min-h-screen w-full max-w-3xl flex-col gap-16 px-6 py-16 sm:px-8">
    <section id="hero" class="space-y-6">
      <p class="text-sm text-white/60">Software engineer</p>
      <h1 class="text-4xl font-semibold leading-tight sm:text-5xl">Deniz Osmanovic</h1>
      <p class="max-w-3xl text-lg text-white/80">
        Fintech full-stack engineer with experience across KYC, payments, and digital storefronts. I currently ship production work
        with Jakarta EE, Oracle/Postgres, Angular, Kafka, and AWS.
      </p>
      <div class="flex flex-wrap gap-4 text-sm">
        <a
          href={github.href}
          class="underline decoration-white/40 underline-offset-4 transition hover:decoration-white"
          target="_blank"
          rel="noopener noreferrer"
        >
          GitHub
        </a>
        <a
          href={linkedin.href}
          class="underline decoration-white/40 underline-offset-4 transition hover:decoration-white"
          target="_blank"
          rel="noopener noreferrer"
        >
          LinkedIn
        </a>
      </div>
    </section>

    <section id="experience" class="space-y-6">
      <h2 class="text-2xl font-semibold text-white">Experience</h2>
      <div class="space-y-8 border-t border-white/10 pt-6">
        {experience.map(({ company, period, summary, roles }) => (
          <article class="space-y-3">
            <div class="flex flex-wrap items-baseline justify-between gap-2">
              <h3 class="text-lg font-semibold text-white">{company}</h3>
              <span class="text-sm text-white/60">{period}</span>
            </div>
            <div class="flex flex-wrap gap-2">
              {roles.map(({ title, period: rolePeriod }) => (
                <span class="rounded-full border border-white/15 bg-white/[0.04] px-3 py-1 text-xs text-white/80">
                  {title} · {rolePeriod}
                </span>
              ))}
            </div>
            <p class="text-white/80">{summary}</p>
          </article>
        ))}
      </div>
    </section>

    <section id="projects" class="space-y-6">
      <div class="flex items-baseline justify-between gap-2">
        <h2 class="text-2xl font-semibold text-white">Projects</h2>
        <span class="text-sm text-white/60">Selected work</span>
      </div>
      <div class="space-y-6 border-t border-white/10 pt-6">
        {projects.map(({ name, description, link }) => (
          <article class="space-y-2">
            <div class="flex flex-wrap items-baseline justify-between gap-2">
              <h3 class="text-lg font-semibold text-white">{name}</h3>
              <a
                href={link}
                class="text-sm underline decoration-white/40 underline-offset-4 transition hover:decoration-white"
                target="_blank"
                rel="noopener noreferrer"
              >
                Open
              </a>
            </div>
            <p class="text-white/75">{description}</p>
          </article>
        ))}
      </div>
    </section>

    <section id="skills" class="space-y-4">
      <h2 class="text-2xl font-semibold text-white">Skills</h2>
      <div class="border-t border-white/10 pt-4">
        <ul class="flex flex-wrap gap-3">
          {skills.map((skill) => (
            <li class="rounded-full border border-white/15 bg-white/[0.04] px-4 py-2 text-sm text-white/80">{skill}</li>
          ))}
        </ul>
      </div>
    </section>

    <section id="certifications" class="space-y-4">
      <h2 class="text-2xl font-semibold text-white">Certifications</h2>
      <div class="space-y-4 border-t border-white/10 pt-4">
        {certifications.map(({ title, issuer, description, credentialUrl }) => (
          <article class="space-y-2">
            <div class="space-y-1">
              <h3 class="text-lg font-semibold text-white">{title}</h3>
              <p class="text-sm text-white/60">{issuer}</p>
            </div>
            <p class="text-sm text-white/70">{description}</p>
            <a
              href={credentialUrl}
              class="text-sm underline decoration-white/40 underline-offset-4 transition hover:decoration-white"
              target="_blank"
              rel="noopener noreferrer"
            >
              Credential
            </a>
          </article>
        ))}
      </div>
    </section>

    <footer class="pb-8 text-xs text-white/40">
      © {new Date().getFullYear()} Deniz Osmanovic.
    </footer>
  </main>
</BaseLayout>
